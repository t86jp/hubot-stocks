{
    "env": {
        "node": true,
        "es6": true
    },
    "plugins": [],
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "ecmaFeatures": {
      "classes": true
    },
    "globals": {
      "document": true,
      "__DEV__": false
    },
    "rules": {
        "indent": [ "error", 2 ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "never" ],
        "space-before-function-paren": ["error", "always"]
    }
}
